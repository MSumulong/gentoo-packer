{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 60000,
      "guest_additions_mode": "disable",
      "guest_os_type": "Gentoo",
      "headless": false,
      "iso_checksum": "b0f37d7de64970a33b9894bed856ad98107a6c4b987ae31c5ce548a20e995b6e406190d2ff1006a8c97d24a4702061c29a46d4a4db074105bca699a89f03572d",
      "iso_checksum_type": "sha512",
      "iso_url": "http://distfiles.gentoo.org/releases/x86/autobuilds/{{user `stage3`}}/install-x86-minimal-{{user `stage3`}}.iso",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "20s",
      "type": "virtualbox-iso",
      "vm_name": "Gentoo"
    }
  ],
  "description": "Faithful Stage 3 Gentoo Installation (VirtualBox)",
  "post-processors": [
    {
      "output": "gentoo-x86-stage3-virtualbox.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=virtualbox",
        "SCRIPTS=/tmp"
      ],
      "scripts": [
        "provision.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "password": "packer",
    "stage3": "20160315",
    "username": "root"
  }
}

